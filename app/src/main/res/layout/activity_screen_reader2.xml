<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScreenReader">


    <TextView
        android:id="@+id/one"
        android:layout_width="352dp"
        android:layout_height="51dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="#6A6565"
        android:text="Level 1"
        style="@style/AppLevelText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBrailleTranslation" />

    <TextView
        android:id="@+id/two"
        android:layout_width="352dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:background="#6A6565"
        android:text=" Level 2"
        style="@style/AppLevelText"
        app:layout_constraintEnd_toEndOf="@+id/one"
        app:layout_constraintStart_toStartOf="@+id/one"
        app:layout_constraintTop_toBottomOf="@+id/one" />

    <TextView
        android:id="@+id/three"
        android:layout_width="352dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:background="#6A6565"
        android:text="Level 3"
        style="@style/AppLevelText"
        app:layout_constraintEnd_toEndOf="@+id/one"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/one"
        app:layout_constraintTop_toBottomOf="@+id/two" />

    <TextView
        android:id="@+id/four"
        android:layout_width="352dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:background="#6A6565"
        android:text="Level 4"
        style="@style/AppLevelText"
        app:layout_constraintEnd_toEndOf="@+id/one"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/one"
        app:layout_constraintTop_toBottomOf="@+id/three" />

    <TextView
        android:id="@+id/five"
        android:layout_width="352dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:background="#6A6565"
        android:text="Level 5"
        style="@style/AppLevelText"
        app:layout_constraintEnd_toEndOf="@+id/one"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/one"
        app:layout_constraintTop_toBottomOf="@+id/four" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#ffffff"
        style="@style/AppButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/five"
        app:layout_constraintTop_toBottomOf="@+id/five" />

    <TextView
        android:id="@+id/tvBrailleTranslation"
        style="@style/AppHeadingText"
        android:layout_width="293dp"
        android:layout_height="48dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="60dp"
        android:text="Screen Reader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivMenu"
        android:layout_width="56dp"
        android:layout_height="46dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu_svgrepo_com" />


</androidx.constraintlayout.widget.ConstraintLayout>